{# Presentation/bestellingBevestigd.twig #}
{% extends 'layout.twig' %}

{% block content %}
  <div class="flex items-start justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold tracking-tight">Bestelling bevestigd</h1>
      <p class="mt-1 text-sm text-gray-600">We hebben je bestelling goed ontvangen.</p>
    </div>
  </div>

  <div class="mt-8 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
    <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
      <div class="flex items-center gap-3">
        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-green-100 text-green-700 font-bold">
          âœ“
        </div>
        <div>
          <p class="text-sm font-semibold text-gray-900">Gelukt!</p>
          <p class="text-xs text-gray-500">Je bestelling staat geregistreerd in het systeem.</p>
        </div>
      </div>
    </div>

    <div class="px-6 py-6">
      <div class="rounded-2xl border border-green-200 bg-green-50 p-4 text-sm text-green-800">
        Je bestelling is goed ontvangen. Je kan hieronder de details bekijken.
      </div>

      <dl class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
        <div class="rounded-2xl border border-gray-200 bg-white p-4">
          <dt class="text-xs font-semibold uppercase tracking-wider text-gray-500">Bestelling ID</dt>
          <dd class="mt-1 text-lg font-bold text-gray-900">{{ bestelling.idBestelling }}</dd>
        </div>

        <div class="rounded-2xl border border-gray-200 bg-white p-4">
          <dt class="text-xs font-semibold uppercase tracking-wider text-gray-500">Status</dt>
          <dd class="mt-2">
            {% if bestelling.status.naam == 'Afgehaald' %}
              <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold bg-gray-100 text-gray-700">
                {{ bestelling.status.naam }}
              </span>
            {% elseif bestelling.status.naam == 'Gemaakt' %}
              <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold bg-green-100 text-green-800">
                {{ bestelling.status.naam }}
              </span>
            {% else %}
              <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold bg-yellow-100 text-yellow-800">
                {{ bestelling.status.naam }}
              </span>
            {% endif %}
          </dd>
        </div>

        <div class="rounded-2xl border border-gray-200 bg-white p-4">
          <dt class="text-xs font-semibold uppercase tracking-wider text-gray-500">Afhaalmoment</dt>
          <dd class="mt-1 text-sm font-semibold text-gray-900">
            {{ bestelling.afhaalmoment|date('d/m/Y H:i') }}
          </dd>
          <dd class="mt-1 text-xs text-gray-500">Gelieve op tijd af te halen.</dd>
        </div>
      </dl>

      <div class="mt-8 flex flex-col-reverse gap-3 sm:flex-row sm:justify-end">
        <a
          href="index.php"
          class="inline-flex items-center justify-center rounded-xl border border-gray-200 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 hover:bg-gray-50"
        >
          Terug naar overzicht
        </a>

        <a
          href="bestellingenController.php"
          class="inline-flex items-center justify-center rounded-xl bg-gray-900 px-4 py-2.5 text-sm font-semibold text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-300"
        >
          Bekijk bestellingen
        </a>
      </div>
    </div>
  </div>
{% endblock %}

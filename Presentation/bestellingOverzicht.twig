{# Presentation/bestellingOverzicht.twig #}
{% extends 'layout.twig' %}

{% block content %}
    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold tracking-tight">Bestellingen</h1>
            <p class="mt-1 text-sm text-gray-600">Overzicht van alle bestellingen, gesorteerd op afhaalmoment.</p>
        </div>
        <div class="text-sm text-gray-500">
            <span class="hidden sm:inline">Totaal:</span>
            <span class="font-semibold text-gray-900">{{ bestellingOverzicht|length }}</span>
        </div>
    </div>
    <div class="mt-6 flex flex-wrap gap-2">
        {% set filters = {
            'all': 'Alles',
            'Besteld': 'Besteld',
            'Gemaakt': 'Gemaakt',
            'Afgehaald': 'Afgehaald'
        } %}

        {% for key, label in filters %}
            <a href="bestellingenController.php{% if key != 'all' %}?status={{ key|url_encode }}{% endif %}"
            class="
                rounded-full px-3 py-1 text-sm font-semibold border
                {% if activeStatus == key %}
                bg-gray-900 text-white border-gray-900
                {% else %}
                bg-white text-gray-700 border-gray-200 hover:bg-gray-50
                {% endif %}
            ">
            {{ label }}
            </a>
        {% endfor %}
    </div>
    {% if bestellingOverzicht is empty %}
        <div class="mt-8 rounded-2xl border border-gray-200 bg-white p-8 text-center shadow-sm">
            <p class="text-base font-semibold text-gray-900">
                {% if activeStatus != 'all' %}
                    Geen bestellingen met status “{{ activeStatus }}”
                {% else %}
                    Nog geen bestellingen
                {% endif %}
            </p>
            <p class="mt-1 text-sm text-gray-600">
                {% if activeStatus != 'all' %}
                    Kies een andere filter om meer te zien.
                {% else %}
                    Zodra er bestellingen zijn, verschijnen ze hier.
                {% endif %}
            </p>
        </div>
    {% else %}
        <div class="mt-8 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                    <p class="text-sm font-medium text-gray-700">Bestellingen overzicht</p>
                    
                    <p class="text-xs text-gray-500">
                        Tip: klik op een status om naar de volgende status te gaan.
                    </p>
                    
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-white">
                        <tr class="text-left text-xs font-semibold uppercase tracking-wider text-gray-500">
                            <th class="px-6 py-3">Broodje</th>
                            <th class="px-6 py-3">Omschrijving</th>
                            <th class="px-6 py-3">Prijs</th>
                            <th class="px-6 py-3">Gebruiker</th>
                            <th class="px-6 py-3">Afhaalmoment</th>
                            <th class="px-6 py-3">Status</th>
                            <th class="px-6 py-3">Acties</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-gray-200 bg-white">
                        {% for bestelling in bestellingOverzicht %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 align-middle">
                                    <div class="font-semibold text-gray-900">{{ bestelling.broodjeNaam }}</div>
                                </td>

                                <td class="px-6 py-4 align-middle">
                                    <div class="max-w-xl text-sm text-gray-700">
                                        {{ bestelling.broodjeOmschrijving }}
                                    </div>
                                </td>

                                <td class="px-6 py-4 align-middle whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">€ {{ bestelling.broodjePrijs }}</div>
                                </td>

                                <td class="px-6 py-4 align-middle whitespace-nowrap">
                                    <div class="text-sm text-gray-900">{{ bestelling.gebruikerNaam }}</div>
                                </td>

                                <td class="px-6 py-4 align-middle whitespace-nowrap">
                                    <div class="text-sm text-gray-900">{{ bestelling.afhalingsmoment|date('d/m/Y H:i') }}</div>
                                </td>

                                <td class="px-6 py-4 align-middle whitespace-nowrap">
                                    {% if bestelling.status == 'Afgehaald' %}
                                        <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold bg-gray-100 text-gray-700">
                                            {{ bestelling.status }}
                                        </span>
                                    {% elseif bestelling.status == 'Gemaakt' %}
                                        <form method="post" class="inline">
                                            <input type="hidden" name="bestellingId" value="{{ bestelling.bestellingId }}">
                                            <button type="submit"
                                                class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold bg-green-100 text-green-800 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-green-300">
                                                {{ bestelling.status }}
                                            </button>
                                        </form>
                                    {% else %} {# Besteld #}
                                        <form method="post" class="inline">
                                            <input type="hidden" name="bestellingId" value="{{ bestelling.bestellingId }}">
                                            <button type="submit"
                                                class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold bg-yellow-100 text-yellow-800 hover:bg-yellow-200 focus:outline-none focus:ring-2 focus:ring-yellow-300">
                                                {{ bestelling.status }}
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 align-middle whitespace-nowrap text-right">
                                <form method="post" action="bestellingVerwijderenController.php" class="inline">
                                    <input type="hidden" name="bestellingId" value="{{ bestelling.bestellingId }}">
                                    <button type="submit"
                                    onclick="return confirm('Ben je zeker dat je deze bestelling wil verwijderen?')"
                                    class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold bg-red-100 text-red-800 hover:bg-red-200
                                            focus:outline-none focus:ring-2 focus:ring-red-300">
                                    Verwijderen
                                    </button>
                                </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}

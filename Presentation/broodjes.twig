{# Presentation/broodjes.twig #}
{% extends 'layout.twig' %}

{% block content %}
  <div class="flex flex-col gap-6">
    <div class="flex items-start justify-between gap-4">
      <div>
        <h2 class="text-3xl font-bold tracking-tight">Onze broodjes</h2>
        <p class="mt-1 text-sm text-gray-600">Kies je favoriet en bestel meteen.</p>
      </div>

      <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm text-gray-700">
        {{ broodjes|length }} broodjes
      </span>
    </div>

    <div class="flex flex-wrap gap-6">
      {% for broodje in broodjes %}
        <article class="flex w-full flex-col rounded-2xl bg-white p-6 shadow-sm ring-1 ring-gray-200 sm:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)]">
          <div class="flex items-start justify-between gap-4">
            <h3 class="text-lg font-semibold leading-snug">
              {{ broodje.naam }}
            </h3>

            <span class="shrink-0 rounded-lg bg-gray-900 px-3 py-1 text-sm font-semibold text-white">
              â‚¬{{ broodje.prijs }}
            </span>
          </div>

          <p class="mt-3 text-sm leading-relaxed text-gray-600">
            {{ broodje.omschrijving }}
          </p>

          <div class="mt-auto pt-5">
            <a href="bestellingNieuwController.php?broodjeId={{ broodje.id }}"
              class="inline-flex w-full justify-center rounded-xl bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white
                     hover:bg-blue-700 active:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
              Bestel
            </a>
          </div>
        </article>
      {% else %}
        <div class="w-full rounded-2xl bg-white p-6 shadow-sm ring-1 ring-gray-200">
          <p class="text-gray-600">Geen broodjes gevonden.</p>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}

{# Presentation/broodjesOverzicht.twig #}
{% extends 'layout.twig' %}

{% block content %}
  <div class="flex items-start justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold tracking-tight">Broodjes</h1>
      <p class="mt-1 text-sm text-gray-600">Overzicht van alle broodjes, alfabetisch gesorteerd.</p>
    </div>

    <div class="text-sm text-gray-500">
      <span class="hidden sm:inline">Totaal:</span>
      <span class="font-semibold text-gray-900">{{ broodjes|length }}</span>
    </div>
  </div>

  {% if broodjes is empty %}
    <div class="mt-8 rounded-2xl border border-gray-200 bg-white p-8 text-center shadow-sm">
      <p class="text-base font-semibold text-gray-900">Geen broodjes gevonden</p>
      <p class="mt-1 text-sm text-gray-600">Maak je eerste broodje aan om te starten.</p>

      <div class="mt-6">
        <a href="broodjeNieuwController.php"
           class="inline-flex items-center justify-center rounded-xl bg-gray-900 px-4 py-2.5 text-sm font-semibold text-white
                  hover:bg-gray-800 active:bg-gray-950 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2">
          + Nieuw broodje
        </a>
      </div>
    </div>
  {% else %}
    <div class="mt-8 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
      <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <p class="text-sm font-medium text-gray-700">Broodjes overzicht</p>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-white">
            <tr class="text-left text-xs font-semibold uppercase tracking-wider text-gray-500">
              <th class="px-6 py-3">Naam</th>
              <th class="px-6 py-3">Omschrijving</th>
              <th class="px-6 py-3">Prijs</th>
              <th class="px-6 py-3 text-right">Acties</th>
            </tr>
          </thead>

          <tbody class="divide-y divide-gray-200 bg-white">
            {% for broodje in broodjes %}
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 align-top">
                  <div class="font-semibold text-gray-900">{{ broodje.naam }}</div>
                  <div class="mt-0.5 text-xs text-gray-500">ID: {{ broodje.id }}</div>
                </td>

                <td class="px-6 py-4 align-top">
                  <div class="max-w-xl text-sm text-gray-700">
                    {{ broodje.omschrijving }}
                  </div>
                </td>

                <td class="px-6 py-4 align-top whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">€ {{ broodje.prijs }}</div>
                </td>

                <td class="px-6 py-4 align-top whitespace-nowrap text-right">
                  <a href="broodjeBewerkenController.php?id={{ broodje.id }}"
                     class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold border
                            bg-white text-gray-700 border-gray-200 hover:bg-gray-50
                            focus:outline-none focus:ring-2 focus:ring-gray-300">
                    Bewerk
                  </a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      <div class="border-t border-gray-200 bg-white px-6 py-4">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
          <p class="text-sm text-gray-600">
            Tip: gebruik “Bewerk” om naam, prijs of omschrijving aan te passen.
          </p>

          <a href="broodjeNieuwController.php"
             class="inline-flex items-center justify-center rounded-xl bg-gray-900 px-4 py-2 text-sm font-semibold text-white
                    hover:bg-gray-800 active:bg-gray-950 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2">
            + Nieuw broodje
          </a>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}
